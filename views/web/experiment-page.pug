extends ../app

block variables
	-
		const pageTitle = 'Эксперимент';

block content
	.page.experiment
		.chart-container
			.legend
				p.values
					| ОТКР
					span.open 0
					| МАКС
					span.high 0
					| МИН
					span.low 0
					| ЗАКР
					span.close 0
			
			.chart-periods
				.5m(data-period='5m')
					span 5M
				.1h(data-period='1h')
					span 1Ч
				.4h(data-period='4h')
					span 4Ч
				.day(data-period='day')
					span Д
				.month(data-period='month')
					span Мес

			.charts

		.instruments-container
			.search
				input(type="text" placeholder="Поиск")
		
			.instruments-list
				.headlines
					span Инструмент
				
				.list

block scripts
	script(src='/libs/moment.min.js')
	script(src='/libs/trading-view-charts.min.js')
	
	script(src='/javascripts/websocket.js')
	script(src='/javascripts/chart-functions/chart-candles.js')
	script(src='/javascripts/chart-functions/chart-volume.js')
	script(src='/javascripts/chart-functions/chart-periods.js')

	script(src='/javascripts/web/experiment.js')

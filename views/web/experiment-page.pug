extends ../app

block variables
	-
		const pageTitle = 'Experiment';

block content
	.page.experiment
		.row
			.charts-container

			.instruments-container
				.search
					input(type="text" placeholder="Поиск")
			
				.instruments-list
					.headlines
						span.instrument-name Инструмент

					.list
					
		.row
			.settings
				.padding
					p Расстояние между поиском max high и min low (чем меньше, тем больше наклонок, но страдает качество)
					input.padding(type="text")
					
				.allowed-percent
					p На сколько % тело свечи может пересечь наклонку
					input.allowed-percent(type="text")
			
				.number-touches
					p Сколько касаний необходимо учитывать при создании наклонки
					input.number-touches(type="text")

block scripts
	script(src='/libs/moment.min.js')
	script(src='/libs/trading-view-charts.min.js')
	script(src='/libs/technical-indicators.min.js')

	script(src='/javascripts/chart-functions/chart-candles.js')
	script(src='/javascripts/chart-functions/indicators/volume.js')

	script(src='/javascripts/web/experiment.js')

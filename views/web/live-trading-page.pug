extends ../app

block variables
	-
		const pageTitle = 'Live';

block content
	.page.live
		.row
			.charts-container

			aside
				.instruments-container
					.search
						input(type="text" placeholder="Поиск")
						//- button#settings
						//- 	img(src="/images/settings.png", alt="settings")
					
					.instruments-list
						.headlines
							span.name(data-type="name") Инструмент
							span(data-type="priceChange_5m") 5M
							span(data-type="priceChange_1h") 1H
							span(data-type="priceChange_1d") 1D
							span.figure-level-percent(data-type="figureLevel") FL

						.list

		.row
			.settings

